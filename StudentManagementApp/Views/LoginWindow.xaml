<Window x:Class="WpfApp1.Views.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Login" Height="290" Width="400" WindowStartupLocation="CenterScreen">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <StackPanel>
            <TextBlock Text="Welcome to School" FontSize="17" FontWeight="Bold"  Margin="0,0,0,14" />
            <TextBlock Text="Username" />
            <TextBox Text="{Binding Username, UpdateSourceTrigger=PropertyChanged}" Margin="0,4,0,10"/>
            <TextBlock Text="Password" />
            <PasswordBox x:Name="PasswordBox" Margin="0,4,0,16"/>
            <Button Content="Login" Width="110" Height="34" Click="Login_Click" />
        </StackPanel>
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Left" Margin="0,20,0,0" >
            <Button Content="Register" Width="95" Margin="0,0,16,0" Click="Register_Click"/>
            <Button Content="Forgot Password" Width="130" Click="Forgot_Click"/>
            <Button Content="Exit" Width="70" Margin="26,0,0,0" Click="Exit_Click"/>
        </StackPanel>
    </Grid>
</Window>
