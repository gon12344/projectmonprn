<Window x:Class="WpfApp1.Views.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Student Management Login" Height="350" Width="400" WindowStartupLocation="CenterScreen">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Login Form -->
        <StackPanel Grid.Row="0" VerticalAlignment="Center">
            <TextBlock Text="?? Student Management System" FontSize="18" FontWeight="Bold" 
                       HorizontalAlignment="Center" Margin="0,0,0,30" Foreground="DarkBlue"/>
            
            <TextBlock Text="Username:" FontWeight="SemiBold" Margin="0,0,0,5"/>
            <TextBox Text="{Binding Username, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,15" Height="30"/>
        
            <TextBlock Text="Password:" FontWeight="SemiBold" Margin="0,0,0,5"/>
            <PasswordBox x:Name="PasswordBox" Margin="0,0,0,20" Height="30"/>
 
            <Button Content="?? Login" Width="120" Height="40" Click="Login_Click" 
                    Background="LightBlue" FontWeight="SemiBold"/>
        </StackPanel>
        
        <!-- Action Buttons -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0">
            <Button Content="Register" Width="80" Margin="5" Click="Register_Click"/>
            <Button Content="Forgot Password" Width="120" Margin="5" Click="Forgot_Click"/>
            <Button Content="Exit" Width="60" Margin="5" Click="Exit_Click"/>
        </StackPanel>
    </Grid>
</Window>
