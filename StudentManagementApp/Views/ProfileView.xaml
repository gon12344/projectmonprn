<UserControl x:Class="WpfApp1.Views.ProfileView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <StackPanel Margin="30">
        <TextBlock Text="Profile" FontSize="22" FontWeight="Bold" Margin="0,0,0,18" />
        <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
            <TextBlock Text="Username: " FontWeight="Bold" Width="120" />
            <TextBlock Text="{Binding Username}" />
        </StackPanel>
        <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
            <TextBlock Text="Full Name: " FontWeight="Bold" Width="120" />
            <TextBlock Text="{Binding FullName}" />
        </StackPanel>
        <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
            <TextBlock Text="Role: " FontWeight="Bold" Width="120" />
            <TextBlock Text="{Binding RoleName}" />
        </StackPanel>
        <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
            <TextBlock Text="Email: " FontWeight="Bold" Width="120" />
            <TextBlock Text="{Binding Email}" />
        </StackPanel>
        <Button Content="Logout" Width="120" Margin="0,36,0,0" Click="Logout_Click" />
    </StackPanel>
</UserControl>
