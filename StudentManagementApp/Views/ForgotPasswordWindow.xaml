<Window x:Class="WpfApp1.Views.ForgotPasswordWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Forgot Password" Height="230" Width="400" WindowStartupLocation="CenterScreen">
    <Grid Margin="20">
        <StackPanel>
            <TextBlock Text="Reset Password" FontWeight="Bold" FontSize="18" Margin="0,0,0,20" />
            <TextBlock Text="Username"/>
            <TextBox x:Name="UsernameBox" Margin="0,4,0,10"/>
            <TextBlock Text="New Password"/>
            <PasswordBox x:Name="NewPwdBox" Margin="0,4,0,14"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="Reset" Width="100" Margin="2" Click="Reset_Click" />
                <Button Content="Cancel" Width="80" Margin="2,0,0,0" Click="Cancel_Click" />
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
