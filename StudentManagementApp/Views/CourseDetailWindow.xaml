<Window x:Class="WpfApp1.Views.CourseDetailWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Thong tin lop hoc" Height="400" Width="450" WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">
    
   <Border Padding="20" Background="LightCyan">
    <Grid>
    <Grid.RowDefinitions>
  <RowDefinition Height="Auto"/>
  <RowDefinition Height="Auto"/>
   <RowDefinition Height="Auto"/>
 <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
 <RowDefinition Height="Auto"/>
        <RowDefinition Height="Auto"/>
       <RowDefinition Height="*"/>
</Grid.RowDefinitions>
    
    <!-- Course Code -->
 <StackPanel Grid.Row="0" Margin="0,0,0,10">
   <TextBlock Text="Ma lop hoc:" FontWeight="Bold" Margin="0,0,0,5"/>
 <TextBox Text="{Binding Course.CourseCode, UpdateSourceTrigger=PropertyChanged}" Height="30"/>
      </StackPanel>

    <!-- Course Name -->
    <StackPanel Grid.Row="1" Margin="0,0,0,10">
   <TextBlock Text="Ten lop hoc:" FontWeight="Bold" Margin="0,0,0,5"/>
        <TextBox Text="{Binding Course.CourseName, UpdateSourceTrigger=PropertyChanged}" Height="30"/>
    </StackPanel>

   <!-- Credits -->
    <StackPanel Grid.Row="2" Margin="0,0,0,10">
    <TextBlock Text="So tin chi:" FontWeight="Bold" Margin="0,0,0,5"/>
    <TextBox Text="{Binding Course.Credits, UpdateSourceTrigger=PropertyChanged}" Height="30"/>
  </StackPanel>
      
  <!-- Department -->
        <StackPanel Grid.Row="3" Margin="0,0,0,10">
<TextBlock Text="Khoa:" FontWeight="Bold" Margin="0,0,0,5"/>
   <TextBox Text="{Binding Course.Department, UpdateSourceTrigger=PropertyChanged}" Height="30"/>
</StackPanel>
  
   <!-- Description -->
  <StackPanel Grid.Row="4" Margin="0,0,0,10">
  <TextBlock Text="Mo ta:" FontWeight="Bold" Margin="0,0,0,5"/>
   <TextBox Text="{Binding Course.Description, UpdateSourceTrigger=PropertyChanged}" 
    Height="60" TextWrapping="Wrap" AcceptsReturn="True"/>
   </StackPanel>
      
  <!-- Is Active -->
      <StackPanel Grid.Row="5" Margin="0,0,0,10">
    <CheckBox IsChecked="{Binding Course.IsActive}" Content="Lop hoc dang hoat dong" 
       FontWeight="Bold"/>
  </StackPanel>
 
 <!-- Validation Messages -->
   <TextBlock Grid.Row="6" Text="{Binding ValidationMessage}" Foreground="Red" 
TextWrapping="Wrap" Margin="0,10,0,10" Visibility="{Binding HasValidationMessage, Converter={StaticResource BooleanToVisibilityConverter}}"/>

      <!-- Buttons -->
        <StackPanel Grid.Row="7" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
<Button Content="Luu" Command="{Binding SaveCommand}" Width="100" Height="35" 
     Margin="0,0,10,0" Background="LightGreen"/>
         <Button Content="Huy" Command="{Binding CancelCommand}" Width="100" Height="35" 
      Background="LightCoral"/>
        </StackPanel>
  </Grid>
 </Border>
</Window>