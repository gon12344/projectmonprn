<Window x:Class="WpfApp1.Views.RegisterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Register New Account" Height="560" Width="400" WindowStartupLocation="CenterScreen">
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <StackPanel>
            <TextBlock Text="Register New Student Account" FontWeight="Bold" FontSize="18" Margin="0,0,0,18" />
            <TextBlock Text="Username" />
            <TextBox x:Name="UsernameBox" Margin="0,4,0,10" />
            <TextBlock Text="Full Name" />
            <TextBox x:Name="FullNameBox" Margin="0,4,0,10" />
            <TextBlock Text="Password" />
            <PasswordBox x:Name="PwdBox" Margin="0,4,0,10" />
            <TextBlock Text="Date of Birth"/>
            <DatePicker x:Name="DOBPicker" Margin="0,4,0,10"/>
            <TextBlock Text="Gender"/>
            <ComboBox x:Name="GenderBox" Margin="0,4,0,10" SelectedIndex="-1">
                <ComboBoxItem Content="Male"/>
                <ComboBoxItem Content="Female"/>
                <ComboBoxItem Content="Other"/>
            </ComboBox>
            <TextBlock Text="Phone Number" />
            <TextBox x:Name="PhoneBox" Margin="0,4,0,10" />
            <TextBlock Text="Email" />
            <TextBox x:Name="EmailBox" Margin="0,4,0,10" />
            <TextBlock Text="Address" />
            <TextBox x:Name="AddrBox" Margin="0,4,0,12" />
        </StackPanel>
        <StackPanel Orientation="Horizontal" Grid.Row="1" HorizontalAlignment="Right">
            <Button Content="Register" Width="110" Margin="0,10,10,0" Click="Register_Click" />
            <Button Content="Cancel" Width="80" Margin="0,10,0,0" Click="Cancel_Click" />
        </StackPanel>
    </Grid>
</Window>
