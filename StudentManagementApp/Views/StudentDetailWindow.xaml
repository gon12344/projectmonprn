<Window x:Class="WpfApp1.Views.StudentDetailWindow"
   xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
   Title="Thong tin sinh vien" Height="450" Width="450" WindowStartupLocation="CenterScreen"
   ResizeMode="NoResize">
  
    <Border Padding="20" Background="AliceBlue">
    <Grid>
    <Grid.RowDefinitions>
  <RowDefinition Height="Auto"/>
    <RowDefinition Height="Auto"/>
   <RowDefinition Height="Auto"/>
 <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
 <RowDefinition Height="Auto"/>
 <RowDefinition Height="Auto"/>
  <RowDefinition Height="Auto"/>
        <RowDefinition Height="Auto"/>
       <RowDefinition Height="*"/>
    </Grid.RowDefinitions>
  
    <!-- Student Code -->
<StackPanel Grid.Row="0" Margin="0,0,0,10">
   <TextBlock Text="Ma sinh vien:" FontWeight="Bold" Margin="0,0,0,5"/>
     <TextBox Text="{Binding Student.StudentCode, UpdateSourceTrigger=PropertyChanged}" Height="30"/>
      </StackPanel>
  
    <!-- Full Name -->
  <StackPanel Grid.Row="1" Margin="0,0,0,10">
   <TextBlock Text="Ho va ten:" FontWeight="Bold" Margin="0,0,0,5"/>
      <TextBox Text="{Binding Student.FullName, UpdateSourceTrigger=PropertyChanged}" Height="30"/>
    </StackPanel>
        
   <!-- Date of Birth -->
        <StackPanel Grid.Row="2" Margin="0,0,0,10">
    <TextBlock Text="Ngay sinh:" FontWeight="Bold" Margin="0,0,0,5"/>
      <DatePicker SelectedDate="{Binding Student.DateOfBirth}" Height="30"/>
    </StackPanel>
      
  <!-- Gender -->
        <StackPanel Grid.Row="3" Margin="0,0,0,10">
<TextBlock Text="Gioi tinh:" FontWeight="Bold" Margin="0,0,0,5"/>
     <ComboBox SelectedValue="{Binding Student.Gender}" Height="30">
  <ComboBoxItem Content="Nam"/>
     <ComboBoxItem Content="Nu"/>
    <ComboBoxItem Content="Khac"/>
        </ComboBox>
</StackPanel>
        
     <!-- Email -->
  <StackPanel Grid.Row="4" Margin="0,0,0,10">
     <TextBlock Text="Email:" FontWeight="Bold" Margin="0,0,0,5"/>
     <TextBox Text="{Binding Student.Email, UpdateSourceTrigger=PropertyChanged}" Height="30"/>
     </StackPanel>
        
  <!-- Phone Number -->
      <StackPanel Grid.Row="5" Margin="0,0,0,10">
   <TextBlock Text="So dien thoai:" FontWeight="Bold" Margin="0,0,0,5"/>
<TextBox Text="{Binding Student.PhoneNumber, UpdateSourceTrigger=PropertyChanged}" Height="30"/>
  </StackPanel>
   
        <!-- Address -->
      <StackPanel Grid.Row="6" Margin="0,0,0,10">
  <TextBlock Text="Dia chi:" FontWeight="Bold" Margin="0,0,0,5"/>
        <TextBox Text="{Binding Student.Address, UpdateSourceTrigger=PropertyChanged}" Height="30"/>
    </StackPanel>
 
 <!-- Validation Messages -->
     <TextBlock Grid.Row="7" Text="{Binding ValidationMessage}" Foreground="Red" 
TextWrapping="Wrap" Margin="0,10,0,10" Visibility="{Binding HasValidationMessage, Converter={StaticResource BooleanToVisibilityConverter}}"/>
        
    <!-- Buttons -->
        <StackPanel Grid.Row="9" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
            <Button Content="Luu" Command="{Binding SaveCommand}" Width="100" Height="35" 
     Margin="0,0,10,0" Background="LightGreen"/>
    <Button Content="Huy" Command="{Binding CancelCommand}" Width="100" Height="35" 
   Background="LightCoral"/>
    </StackPanel>
  </Grid>
 </Border>
</Window>